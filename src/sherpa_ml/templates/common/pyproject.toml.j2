[build-system]
requires = ["setuptools>=69", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "demo-vision"
version = "0.1.0"
description = "Generated by Sherpa-ML"
readme = "README.md"
requires-python = ">=3.10"
authors = [{ name = "Your Name" }]
license = { text = "MIT" }

# Keep core runtime deps minimal; add extras below as needed.
dependencies = [
  "rich>=13.7.1"
]

[project.optional-dependencies]
# Install with: pip install .[pytorch]
pytorch = ["torch>=2.2.0"]
# pip install .[sklearn]
sklearn = ["scikit-learn>=1.4.0"]
# pip install .[transformers]
transformers = ["transformers>=4.42.0", "datasets>=2.20.0"]
# pip install .[hydra]
hydra = ["hydra-core>=1.3.2"]
# pip install .[mlflow]
mlflow = ["mlflow>=2.14.0"]

[tool.setuptools]
package-dir = { "" = "src" }

[tool.setuptools.packages.find]
where = ["src"]
