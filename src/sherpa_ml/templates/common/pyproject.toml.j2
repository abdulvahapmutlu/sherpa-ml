[build-system]
requires = ["setuptools>=69", "wheel"]
build-backend = "setuptools.build_meta"

[project]
# Distribution name (hyphenated); importable package lives under src/<package>
name = "demo-vision"
version = "0.1.0"
description = "Generated by Sherpa-ML"
readme = "README.md"
requires-python = ">=3.10"
authors = [{ name = "Your Name" }]
license = { text = "MIT" }

# Core, lightweight runtime deps
dependencies = [
  "rich>=13.7.1"
]

# Install extras as needed, e.g.:
#   pip install .[pytorch]
#   pip install .[sklearn]
#   pip install .[transformers]
#   pip install .[hydra]
#   pip install .[mlflow]
[project.optional-dependencies]
pytorch = ["torch>=2.2.0"]
sklearn = ["scikit-learn>=1.4.0"]
transformers = ["transformers>=4.42.0", "datasets>=2.20.0"]
hydra = ["hydra-core>=1.3.2"]
mlflow = ["mlflow>=2.14.0"]

[tool.setuptools]
# Single-table inline value avoids parser quirks
package-dir = { "" = "src" }

[tool.setuptools.packages.find]
where = ["src"]
